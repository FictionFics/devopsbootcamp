pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                echo 'Clonando repositorio...'
                // Descargar el c贸digo fuente
                checkout scm
            }
        }

        stage('Compile') {
            steps {
                echo 'Compilando c贸digo fuente...'
                // Ejecutar el comando para compilar el c贸digo
                sh './gradlew compileJava'
            }
        }

        stage('Unit Tests') {
            steps {
                echo 'Ejecutando pruebas unitarias...'
                // Ejecutar los tests unitarios
                sh './gradlew test'
            }
        }
    }

    post {
        always {
            echo 'Pipeline finalizado.'
        }
        success {
            echo 'Pipeline ejecutado exitosamente.'
        }
        failure {
            echo 'Pipeline fall贸.'
        }
    }
}
